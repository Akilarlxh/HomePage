extends  components/layout
block content
	include page/speak
append csses
	link(rel="stylesheet" href=`${link.cdn}/css/speaker.css`)
	title 说说 - #{head.title}
	
block append scripts
	script(src="https://cdn.jsdelivr.net/npm/marked/marked.min.js")
	script(src=`${link.cdn}/js/Speak.js`)
	script.
		new Speak({
			per_page: #{speak.per_page},
			owner: '#{speak.owner}',
			repo: '#{speak.repo}',
			defaultLabelName: '#{speak.defaultLabelName}',
			defaultLabelColor: '#{speak.defaultLabelColor}',
		});